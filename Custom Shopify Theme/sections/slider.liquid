  <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
      <li data-target="#carouselExampleIndicators" data-slide-to="0" class=""></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="1" class="active"></li>
    </ol>
    <div class="carousel-inner">

      {% for block in section.blocks %}
         <div class="carousel-item {% if forloop.first %}active{%endif%}">
           {% if block.settings.slider_image != blank %}
              <img class="d-block w-100" src="{{ block.settings.slider_image | img_url: '1920x' }}">

              {% else %}
              {{ 'lifestyle-2' | placeholder_svg_tag: 'img-thumbnail' }}
           {% endif %}

              <div class="carousel-caption d-none d-md-block text-{{ block.settings.position }} mb-md-5 my-5">
                <h2 class="text-primary">{{ block.settings.heading }}</h2>
                <p class="text-primary">{{ block.settings.subheading }}</p>
                <p><a href="{{ block.settings.link }}" class="btn btn-outline-primary">{{ block.settings.button }}</a></p>
              </div>
          </div>
      {% endfor %}




      <!-- <div class="carousel-item">
        <img class="d-block w-100" src="images/slider-2.jpg">
      </div> -->


    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>


{% schema %}
{
  "name": "Slider",
  "settings": [
    {
      "type": "text",
      "id": "id",
      "label": "label"
    }
  ],
  "blocks": [
    {
      "type": "content",
      "name": "Slider",
      "settings": [
        {
          "type": "image_picker",
          "id": "slider_image",
          "label": "Slider Image"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Fashion is Future."
        },
        {
          "type": "text",
          "id": "subheading",
          "label": "Subheading",
          "default": "Life is nothing when you are not able wear basic clothes."
        },
        {
          "type": "text",
          "id": "button",
          "label": "Button Text",
          "default": "View More"
        },
        {
          "type": "collection",
          "id": "link",
          "label": "Button Link",
          "info": "Select Approriate Collection"
        },
        {
          "type": "select",
          "id": "position",
          "label": "Slider Text Positon",
          "options": [
            {
              "value": "left",
              "label": "Left"
            },
            {
              "value": "center",
              "label": "Center"
            },
            {
              "value": "right",
              "label": "Right"
            }
          ]
        }
      ]
    }
  ],
  "presets": [
    {
      "category": "slider",
      "name":"Slider"
    }
  ]
}
{% endschema %}